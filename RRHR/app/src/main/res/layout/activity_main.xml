<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:id="@+id/root_main_view"
    android:orientation="vertical"
    tools:context=".main.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btn_get_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get movie" />

        <Button
            android:id="@+id/btn_get_filter_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="init glide" />

        <Button
            android:id="@+id/btn_get_rxbus_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="get Rxbus data" />

        <Button
            android:id="@+id/btn_show_cache_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="show sp cache" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_get_rxbus_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>
